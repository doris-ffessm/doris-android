<?xml version="1.0" encoding="utf-8"?>
<!--Start of user code customView_layout for Accueil -->
<!-- freely adapt here the desired layout for your custom view -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="4dip" >

	<TextView
        android:id="@+id/accueil_texte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dip"
		android:text="@string/accueil_customview_texte_text"/>
	<View style="@style/Separateur"/>
	<ScrollView
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_weight="2">
		<LinearLayout
	        android:id="@+id/accueil_scroll_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
			<!--  <Button
			    android:id="@+id/btnListeFichesAccueil"
			    android:layout_width="wrap_content"
			    android:layout_height="30dp"
			    android:layout_marginRight="15dp"
			    android:layout_marginTop="15dp"
			    android:background="@drawable/button_background"
			    android:onClick="onClickBtnListeFiches"
			    android:paddingBottom="4dp"
			    android:paddingLeft="8dp"
			    android:paddingRight="8dp"
			    android:paddingTop="4dp"
			    android:text="@string/accueil_customview_listefiches_btn_label"
			    android:textColor="@android:color/darker_gray" />
			-->
			<LinearLayout 
			    android:id="@+android:id/accueil_recherche_precedente_ll"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="horizontal"
			    android:onClick="onClickBtnListeFiches" >
			    
			    <ImageView
			        android:id="@+id/accueil_recherche_precedente_icone"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginBottom="8dip"
			        android:layout_marginLeft="2dip"
			        android:layout_marginRight="2dip"
			        android:layout_marginTop="2dip"
			        android:adjustViewBounds="true"
			        android:contentDescription="recherche précédente"
			        android:maxHeight="64dip"
			        android:src="@drawable/doris_large" >

			    </ImageView>
			    <RelativeLayout
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
						android:paddingLeft="4dip"
        				android:paddingRight="4dip" >
					
					<LinearLayout 
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:orientation="vertical" >
				
						<TextView
						    android:id="@+id/accueil_recherche_precedente_label"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:text="@string/accueil_recherche_precedente_label_text"
						    android:textAppearance="?android:attr/textAppearanceMedium"
						    android:textColor="?android:attr/textColorPrimary" >

					    </TextView>
					    <TextView
					        android:id="@+id/accueil_recherche_precedente_details"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:paddingLeft="4dip"
					        android:textAppearance="?android:attr/textAppearanceSmall"
            				android:textColor="?android:attr/textColorSecondary">
					    </TextView>
					</LinearLayout>
			
				</RelativeLayout>
			</LinearLayout>
			
			
			
			<LinearLayout
		        android:id="@+id/accueil_navigation_zones_layout"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical" >
	        </LinearLayout>
			<View style="@style/Separateur"/>
			<TextView
		        android:id="@+id/accueil_etat_hors_ligne_titre"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="8dip"
		        android:padding="3dip"
	    		android:textAppearance="?android:attr/textAppearanceMedium" 
	    		android:textColor="?android:attr/textColorPrimary"
				android:text="@string/etatmodehorsligne_customview_titre_text"/>
			
			<LinearLayout
		        android:id="@+id/accueil_progress_layout"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical" >
	        </LinearLayout>
		</LinearLayout>
	</ScrollView>
	
	<RelativeLayout
	    android:id="@+id/accueil_logos"
	    android:layout_width="match_parent"
	    android:layout_height="130dp"
	    android:gravity="center_horizontal"
	    android:orientation="vertical" >

		<ImageView
		    android:id="@+id/accueil_logo1"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignParentTop="true"
		    android:layout_marginLeft="4dip"
		    android:layout_marginRight="4dip"
		    android:layout_marginTop="4dip"
		    android:adjustViewBounds="true"
		    android:contentDescription="@string/accueil_customview_logo1_description"
		    android:maxHeight="60dp"
		    android:onClick="onClickBtnIconeSiteWeb1"
		    android:src="@drawable/logo_doris" />

	    <ImageView
	        android:id="@+id/accueil_logo2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_marginLeft="4dip"
	        android:layout_marginRight="4dip"
	        android:layout_marginTop="4dip"
	        android:adjustViewBounds="true"
	        android:contentDescription="@string/accueil_customview_logo2_description"
	        android:maxHeight="60dp"
	        android:onClick="onClickBtnIconeSiteWeb2"
	        android:src="@drawable/logo_biologie" />

	    <ImageView
	        android:id="@+id/btn_close"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:contentDescription="Fermer"
	        android:onClick="onClickBtnFermer"
			android:src="@android:drawable/ic_menu_close_clear_cancel" />

	</RelativeLayout>
	<ScrollView
	    android:id="@+id/accueil_debug"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_weight="3"
	    android:background="#404040"
		android:visibility="gone">
	
	    <TextView
	        android:id="@+id/accueil_debug_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="3dip" />
	</ScrollView>


</LinearLayout><!-- End of user code
-->
