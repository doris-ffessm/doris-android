<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+android:id/listeficheavecfiltre_listviewrow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/listeficheavecfiltre_listviewrow_icon"
        android:contentDescription="Fiche icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="48dip"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:layout_marginTop="4dip"
        android:src="@drawable/ic_launcher" >
    </ImageView>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	    
		<TextView
	        android:id="@+id/listeficheavecfiltre_listviewrow_label"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20sp" >
	    </TextView>
	    <TextView
	        android:id="@+id/listeficheavecfiltre_listviewrow_details"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="16sp" >
	    </TextView>
	</LinearLayout>
</LinearLayout>
