<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/jeux_listviewrow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
	android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/jeux_listviewrow_icon"
		android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="2dip"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:layout_marginTop="2dip"
        android:adjustViewBounds="true"
        android:contentDescription="Icône Réponse"
		android:scaleType="fitCenter"
        android:src="@drawable/app_ic_launcher" >
    </ImageView>
    <RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
			android:paddingLeft="4dip"
       		android:paddingRight="4dip" >
		<LinearLayout
		    android:id="@+id/jeux_listviewrow_text_linearlayout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
	        android:paddingTop="8dp"
			android:paddingLeft="4dip">

			<TextView
		        android:id="@+id/jeux_listviewrow_label"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textAppearance="?android:attr/textAppearanceMedium"
			    android:textColor="?android:attr/textColorPrimary" >
		    </TextView>
		    <TextView
		        android:id="@+id/jeux_listviewrow_details"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingLeft="4dip"
		        android:textAppearance="?android:attr/textAppearanceSmall"
   				android:textColor="?android:attr/textColorSecondary" >
		    </TextView>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>
