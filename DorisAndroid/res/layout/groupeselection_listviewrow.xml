<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+android:id/groupeselection_listviewrow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/groupeselection_listviewrow_icon"
        android:contentDescription="Groupe icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="48dip"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:layout_marginTop="4dip"
        android:src="@drawable/ic_launcher" >
    </ImageView>
    <RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" >
		
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" >
	
			<TextView
		        android:id="@+id/groupeselection_listviewrow_label"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="20sp" >
		    </TextView>
		    <TextView
		        android:id="@+id/groupeselection_listviewrow_details"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="16sp" >
		    </TextView>
		</LinearLayout>
		<!-- Start of user code protected
			-->
		<TextView
		    android:id="@+id/groupeselection__btnEtatFiche"
	        android:layout_width="wrap_content"
	        android:layout_height="20dp"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginRight="2dp"
	        android:layout_marginTop="1dp"
	        android:paddingTop="2dp"
	        android:paddingBottom="2dp"
	        android:background="@drawable/button_background"
	        android:textColor="#ffffff"
	        android:text=" fp " >
		</TextView>

		<!-- End of user code
			-->
	</RelativeLayout>
</LinearLayout>
