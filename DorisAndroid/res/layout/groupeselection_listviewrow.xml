<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+android:id/groupeselection_listviewrow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/groupeselection_listviewrow_icon"
        android:contentDescription="Groupe icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="48dip"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:layout_marginTop="4dip"
        android:src="@drawable/ic_launcher" >
    </ImageView>
    <RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" >
		
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" >
	
			<TextView
		        android:id="@+id/groupeselection_listviewrow_label"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="20sp" >
		    </TextView>
		    <TextView
		        android:id="@+id/groupeselection_listviewrow_details"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="16sp" >
		    </TextView>
		</LinearLayout>
		<!-- Start of user code protected
			-->
		<ImageView
	        android:id="@+id/groupeselection_has_child_group"
	        android:contentDescription="Groupe contient des sous groupes"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:adjustViewBounds="true"
	        android:layout_toLeftOf="@+id/groupeselection_btnSelect"
	        android:layout_alignTop="@+id/groupeselection_btnSelect"
	        android:layout_alignBottom="@+id/groupeselection_btnSelect"
	        
	        android:maxHeight="32dip"
	        android:layout_marginLeft="4dip"
	        android:layout_marginRight="4dip"
	        android:layout_marginTop="4dip"
	        android:src="@drawable/expander_ic_minimized" >
    	</ImageView>
		<ImageButton
		    android:id="@+id/groupeselection_btnSelect"
		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="0dp"
	        android:padding="5dp"
	        android:layout_margin="0dp"
		    android:text=""
		    android:drawablePadding="0dp"
		    android:src="@android:drawable/ic_menu_set_as"
		    android:scaleType="fitCenter"
	        android:background="@android:color/transparent"
	     />

		<!-- End of user code
			-->
	</RelativeLayout>
</LinearLayout>
