<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+android:id/groupeselection_listviewrow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
	android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/groupeselection_listviewrow_icon"
		android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="2dip"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:layout_marginTop="2dip"
        android:adjustViewBounds="true"
        android:contentDescription="Groupe icon"
		android:scaleType="fitCenter"
        android:src="@drawable/app_ic_launcher" >
    </ImageView>
    <RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
			android:paddingLeft="4dip"
       		android:paddingRight="4dip" >
		<!-- Start of user code protected groupeselection_listviewrow linearlayout customization
			-->
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_toLeftOf="@+id/groupeselection_btnHasChildGroup"
		    android:orientation="vertical" >
	
		<!-- End of user code
			-->
			<TextView
		        android:id="@+id/groupeselection_listviewrow_label"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textAppearance="?android:attr/textAppearanceMedium"
			    android:textColor="?android:attr/textColorPrimary" >
		    </TextView>
		    <TextView
		        android:id="@+id/groupeselection_listviewrow_details"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingLeft="4dip"
		        android:textAppearance="?android:attr/textAppearanceSmall"
   				android:textColor="?android:attr/textColorSecondary" >
		    </TextView>
		</LinearLayout>
		<!-- Start of user code protected groupeselection_listviewrow linearlayout additions
			-->
		<ImageView
	        android:id="@+id/groupeselection_btnHasChildGroup"
	        android:contentDescription="Groupe contient des sous groupes"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:adjustViewBounds="true"
	        android:layout_toLeftOf="@+id/groupeselection_btnSelect"
	        android:layout_alignTop="@+id/groupeselection_btnSelect"
	        android:layout_alignBottom="@+id/groupeselection_btnSelect"
	        android:maxHeight="32dip"
	        android:layout_marginLeft="4dip"
	        android:layout_marginRight="4dip"
	        android:layout_marginTop="4dip"
	        android:src="@drawable/app_expander_ic_minimized" >
    	</ImageView>
		<ImageButton
		    android:id="@+id/groupeselection_btnSelect"
		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="0dp"
	        android:padding="5dp"
	        android:layout_margin="0dp"
		    android:text=""
		    android:drawablePadding="0dp"
		    android:src="@drawable/ic_action_liste_fiches"
		    android:scaleType="fitCenter"
	        android:background="@android:color/transparent"
	     />

		<!-- End of user code
			-->
		
	</RelativeLayout>
</LinearLayout>
