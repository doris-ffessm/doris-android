<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
<!--Start of user code elementView_layout for DetailsParticipant_before_scroll
-->
<!--End of user code
-->
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

	<!--Start of user code elementView_layout for DetailsParticipant
-->

		<RelativeLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:gravity="right" >

		    <ImageView
		        android:id="@+id/detailsparticipant_elementview_icon"
		        android:layout_width="120dp"
		        android:layout_height="120dp"
		        android:layout_margin="2dp"
		        android:contentDescription="Trombine Participant"
		        android:maxHeight="48dip"
		        android:maxWidth="48dip"
		        android:src="@drawable/app_ic_participant_small" >
		    </ImageView>

		    <TextView
		        android:id="@+id/detailsparticipant_textView1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:padding="3dip"
		        android:layout_alignTop="@+id/detailsparticipant_elementview_icon"
		        android:layout_toRightOf="@+id/detailsparticipant_elementview_icon"
		        android:text="@string/detailsparticipant_elementview_nom_label"
				android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="?android:attr/textColorPrimary" />

		    <TextView
		        android:id="@+id/detailsparticipant_elementview_nom"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:padding="3dip"
		        android:layout_toRightOf="@+id/detailsparticipant_textView1"
		        android:layout_alignTop="@+id/detailsparticipant_textView1"
		        android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="?android:attr/textColorPrimary"
                android:text="Nom"/>

		    <TextView
		        android:id="@+id/detailsparticipant_textView2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:padding="3dip"
		        android:layout_alignLeft="@+id/detailsparticipant_textView1"
		        android:layout_below="@+id/detailsparticipant_textView1"
		        android:text="@string/detailsparticipant_elementview_numeroparticipant_label"
				android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?android:attr/textColorSecondary"/>

		    <TextView
		        android:id="@+id/detailsparticipant_elementview_numeroparticipant"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:padding="3dip"
		        android:layout_toRightOf="@+id/detailsparticipant_textView2"
		        android:layout_below="@+id/detailsparticipant_textView1"
		        android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?android:attr/textColorSecondary"
                android:text="999"/>

		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentBottom="true"
		        android:layout_alignParentRight="true"
		        android:onClick="onClickBioComplete"
		        android:orientation="vertical" >

		        <ImageView
		            android:id="@+id/detailsparticipant_participants_icone"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:adjustViewBounds="true"
		            android:contentDescription="Participants"
		            android:maxHeight="64dip"
		            android:src="@drawable/app_ic_launcher" />

		        <TextView
		            android:id="@+id/detailsparticipant_participants_text"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="2dp"
		            android:layout_marginRight="2dp"
		            android:text="@string/detailsparticipant_elementview_bio_textbutton"
		            android:textAppearance="?android:attr/textAppearanceSmall"
		            android:textColor="?android:attr/textColorSecondary" />
		    </LinearLayout>
		    
		</RelativeLayout>

<!--End of user code
-->
        </LinearLayout>
    </ScrollView>

</LinearLayout>
