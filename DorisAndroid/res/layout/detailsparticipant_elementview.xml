<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
<!--Start of user code elementView_layout for DetailsParticipant_before_scroll
-->
<!--End of user code
-->
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

	<!--Start of user code elementView_layout for DetailsParticipant
-->
	<ImageView
        android:id="@+id/detailsparticipant_elementview_icon"
        android:contentDescription="Dive icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:maxWidth="48dip"
        android:maxHeight="48dip"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        android:src="@drawable/ic_participant_small" >
    </ImageView>


		    <TableLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" >
				<TableRow
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content" >
		            <TextView
			            android:text="@string/detailsparticipant_elementview_nom_label"
			            android:padding="3dip" />
			        <TextView
			            android:id="@+id/detailsparticipant_elementview_nom"
			            android:gravity="right"
			            android:padding="3dip" />
		        </TableRow>
				<TableRow
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content" >
		            <TextView
			            android:text="@string/detailsparticipant_elementview_numeroparticipant_label"
			            android:padding="3dip" />
			        <TextView
			            android:id="@+id/detailsparticipant_elementview_numeroparticipant"
			            android:gravity="right"
			            android:padding="3dip" />
		        </TableRow>

			</TableLayout>
			<LinearLayout
			        android:layout_width="wrap_content"
			        android:layout_height="match_parent"
			        android:orientation="horizontal"
					android:background="@drawable/groupe_icon_background" >
					<LinearLayout
				        android:layout_width="match_parent"
				        android:layout_height="match_parent"
				        android:orientation="vertical"
						android:onClick="onClickBioComplete" >
				        <ImageView
					        android:id="@+id/accueil_participants_icone"
					        android:layout_width="fill_parent"
					        android:layout_height="wrap_content"
					        android:adjustViewBounds="true"
					        android:contentDescription="Participants"
					        android:maxHeight="64dip"
					        android:src="@drawable/ic_launcher" />
				        <TextView
					        android:id="@+id/accueil_participants_text"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_marginLeft="2dp"
					        android:layout_marginRight="2dp"
				    		android:textAppearance="?android:attr/textAppearanceSmall" 
				    		android:textColor="?android:attr/textColorPrimaryInverse"
							android:text="@string/detailsparticipant_elementview_bio_textbutton"/>
					</LinearLayout>
			    </LinearLayout>
<!--End of user code
-->
        </LinearLayout>
    </ScrollView>

</LinearLayout>
