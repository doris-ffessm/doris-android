<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+android:id/zonegeoselection_listviewrow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:orientation="vertical" >
    
    <View style="@style/Separateur"/>
    
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal" >
    
    	<ImageView
	        android:id="@+id/zonegeoselection_listviewrow_icon"
	        android:contentDescription="ZoneGeographique icon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:adjustViewBounds="true"
	        android:maxHeight="48dip"
	        android:layout_marginBottom="8dip"
	        android:layout_marginLeft="2dip"
	        android:layout_marginRight="2dip"
	        android:layout_marginTop="2dip"
	        android:src="@drawable/ic_launcher" >
	    </ImageView>
	    <RelativeLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
				android:paddingLeft="4dip"
        		android:paddingRight="4dip">
			
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical" >
		
				<TextView
			        android:id="@+id/zonegeoselection_listviewrow_label"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textAppearance="?android:attr/textAppearanceMedium"
				    android:textColor="?android:attr/textColorPrimary">
			    </TextView>
			    <TextView
			        android:id="@+id/zonegeoselection_listviewrow_details"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:paddingLeft="4dip"
			        android:textAppearance="?android:attr/textAppearanceSmall"
       				android:textColor="?android:attr/textColorSecondary">
			    </TextView>
			</LinearLayout>
			<!-- Start of user code protected
				-->		
			<ImageButton
			    android:id="@+id/zonegeoselection__selectBtn"
			    android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_marginRight="0dp"
		        android:padding="5dp"
		        android:layout_margin="0dp"
			    android:text=""
			    android:drawablePadding="0dp"
			    android:src="@android:drawable/ic_menu_set_as"
			    android:scaleType="fitCenter"
		        android:background="@android:color/transparent"
			     />

		<!-- End of user code
			-->
	</RelativeLayout>
	</LinearLayout>
</LinearLayout>
