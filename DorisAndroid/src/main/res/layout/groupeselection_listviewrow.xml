<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/groupeselection_listviewrow"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/groupeselection_listviewrow_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription="Groupe icon"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_background" >

 	</ImageView>

	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_weight="99"
	    android:orientation="vertical" >

	<!-- End of user code
		-->
		<TextView
	        android:id="@+id/groupeselection_listviewrow_label"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textAppearance="?android:attr/textAppearanceMedium"
		    android:textColor="?android:attr/textColorPrimary" >
	    </TextView>
	    
					
	    <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >
	    
			<ImageView
		        android:id="@+id/groupeselection_ivChildGroup"
		        android:contentDescription="Groupe contient des sous groupes"
		        android:layout_width="24dp"
		        android:layout_height="24dp"
		        android:adjustViewBounds="true"
		        android:layout_marginBottom="4dip"
		        android:layout_marginLeft="4dip"
		        android:layout_marginRight="4dip"
		        android:layout_marginTop="4dip"
		        android:src="?attr/ic_action_arbre_phylogenetique" >
	    	</ImageView>
	    	
		    <TextView
		        android:id="@+id/groupeselection_listviewrow_details"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingLeft="4dip"
		        android:textAppearance="?android:attr/textAppearanceSmall"
   				android:textColor="?android:attr/textColorSecondary" >
		    </TextView>
	    </LinearLayout>
		    
	</LinearLayout>
	<RadioButton
		android:id="@+id/groupeselection_radioSelect"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="" />

</LinearLayout>
