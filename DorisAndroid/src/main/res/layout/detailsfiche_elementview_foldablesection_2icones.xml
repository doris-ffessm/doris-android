<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailsfiche_elementview_foldablesection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/detailsfiche_elementview_fold_unflod_section_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal" >


        <TextView
            android:id="@+id/detailsfiche_elementview_foldablesection_titre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:text="@string/detailsfiche_elementview_groupes_label"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?android:attr/textColorPrimary" />
        <ImageButton
            android:id="@+id/detailsfiche_elementview_fold_unfold_section_imageButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:adjustViewBounds="true"
            android:contentDescription="Plier/dÃ©plier la section"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_menu_down_outline"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/detailsfiche_elementview_fold_unflod_section_icones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/detailsfiche_elementview_foldablesection_foldableicone1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="Image du groupe 1"
            android:scaleType="fitCenter"
            android:src="@drawable/app_ic_launcher"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/detailsfiche_elementview_foldablesection_foldabletexte1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/detailsfiche_elementview_foldablesection_foldableicone1"
            android:layout_toStartOf="@+id/detailsfiche_elementview_foldablesection_foldableicone2"
            android:maxLines="4"
            android:paddingStart="4dp"
            android:paddingEnd="0dp"
            android:text="Groupe 1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?android:attr/textColorSecondary"
            tools:ignore="HardcodedText" />

        <View android:id="@+id/detailsfiche_elementview_foldablesection_foldableview"
            android:layout_centerHorizontal="true"
			android:layout_width="0dp"
            android:layout_height="0dp"/>

        <ImageButton
            android:id="@+id/detailsfiche_elementview_foldablesection_foldableicone2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/detailsfiche_elementview_foldablesection_foldableview"
            android:adjustViewBounds="true"
            android:contentDescription="Image du groupe 2"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/app_ic_launcher"
            tools:ignore="HardcodedText" />
                
        <TextView
            android:id="@+id/detailsfiche_elementview_foldablesection_foldabletexte2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="32dp"
            android:layout_toEndOf="@+id/detailsfiche_elementview_foldablesection_foldableicone2"
            android:maxLines="4"
            android:paddingStart="4dp"
            android:paddingEnd="0dp"
            android:text="Groupe 2"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?android:attr/textColorSecondary"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

    <View style="@style/Separateur" />

</LinearLayout>
