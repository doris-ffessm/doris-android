<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/detailsfiche_elementview_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
	android:background="?attr/dorisAppBackground">
<!--Start of user code elementView_layout for DetailsFiche_before_scroll
-->
	
<!--End of user code
-->
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

	<!--Start of user code elementView_layout for DetailsFiche
 -->
			<HorizontalScrollView
		        android:id="@+id/detailsfiche_elementview_gallery_horizontalScrollView"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" >
		
		        <LinearLayout
		            android:id="@+id/detailsfiche_elementview_photogallery"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:orientation="horizontal" >
		
		          <!--   <ImageView
		                android:id="@+id/detailsfiche_elementview_icon"
		                android:contentDescription="Dive icon"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="4dip"
		                android:layout_marginRight="10dip"
		                android:layout_marginTop="4dip"
		                android:adjustViewBounds="true"
		                android:src="@drawable/ic_launcher" >
		            </ImageView>
				   -->
		        </LinearLayout>
		    </HorizontalScrollView>
            

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0"
                android:shrinkColumns="1" >

				<TableRow
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content">

		            <TextView
		                android:id="@+id/detailsfiche_elementview_nomcommun"
		                android:layout_width="0dp"
		                android:maxLines="4"
		                android:gravity="left"
		                android:text="Nom Commun"
		                android:padding="3dip"
		                android:textAppearance="?android:attr/textAppearanceMedium"
		                android:textColor="?android:attr/textColorPrimary"
		                />

		            <TextView
			            android:id="@+id/detailsfiche_elementview_numerofiche"
			            android:layout_width="wrap_content"
			            android:gravity="right"
		                android:text="9999"
			            android:padding="3dip"
			            android:textAppearance="?android:attr/textAppearanceSmall"
            			android:textColor="?android:attr/textColorSecondary"
			            />
		        </TableRow>

		        <TableRow
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content" >

		            <TextView
		                android:id="@+id/detailsfiche_elementview_nomscientifique"
		                android:layout_width="0dp"
		                android:maxLines="4"
		                android:gravity="left"
		                android:padding="3dip"
		                android:text="Nom Scientifique"
		                android:textAppearance="?android:attr/textAppearanceSmall"
            			android:textColor="?android:attr/textColorSecondary"
		                />
					<LinearLayout
					    android:layout_height="wrap_content"
		            	android:layout_width="wrap_content" 
			            android:gravity="right"
	        			android:layout_marginRight="2dp"
					    >

						<ImageView
						    android:id="@+id/detailsfiche_elementview_picto_reglementee"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:gravity="right"
				        	android:padding="3dip"
				        	android:visibility="gone"
						    android:src="@drawable/doris_picto_espece_reglementee" />
						
						<ImageView
						    android:id="@+id/detailsfiche_elementview_picto_dangereuse"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:gravity="right"
				        	android:padding="3dip"
				        	android:visibility="gone"
						    android:src="@drawable/doris_picto_espece_dangereuse" />

					    <TextView
					        android:id="@+id/detailsfiche_elementview_etatfiche"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_marginRight="2dp"
					        android:background="@drawable/button_background"
					        android:gravity="right"
					        android:padding="3dip"
					        android:text="EF"
					        android:textColor="?android:attr/textColorSecondary" />

					</LinearLayout>

            	 </TableRow>

		            <View
		                style="@style/Separateur"
		                android:layout_marginBottom="2dp"
		                android:layout_marginTop="2dp" />
   		    </TableLayout>
            <!-- <TableLayout
		        android:layout_width="match_parent"
		        android:layout_height="fill_parent" 
		        android:id="@+id/detailsfiche_elementview_table_for_sections">
		    </TableLayout>-->
		    <LinearLayout
		        android:id="@+id/detailsfiche_sections_layout"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical" />
            <TextView
                android:id="@+id/detailsfiche_elementview_debug_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="3dip"
                android:background="#404040"
				android:text="Debug"/>
            
<!-- End of user code
-->
        </LinearLayout>
    </ScrollView>

</LinearLayout>
